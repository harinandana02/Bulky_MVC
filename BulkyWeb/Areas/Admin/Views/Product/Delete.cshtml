
@model Product

<form method="post" class="">

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete category</h2>
            <hr>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Title" class="form-label" for="categoryName"></label>
            <input asp-for="Title" disabled class="form-control" id="categoryName">
            
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" disabled class="form-control">
            
        </div>
        <div class="mb-3">
            <label asp-for="ISBN" class="form-label"></label>
            <input asp-for="ISBN" disabled class="form-control">
           
        </div>
        <div class="mb-3">
            <label asp-for="Author" class="form-label"></label>
            <input asp-for="Author" disabled class="form-control">
            
        </div>
        <div class="mb-3">
            <label asp-for="ListPrice" class="form-label"></label>
            <input asp-for="ListPrice" disabled class="form-control">
            
        </div>
        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" disabled class="form-control">
            
        </div>
        <div class="mb-3">
            <label asp-for="Price50" class="form-label"></label>
            <input asp-for="Price50" disabled class="form-control">
           
        </div>
        <div class="mb-3">
            <label asp-for="Price100" class="form-label"></label>
            <input asp-for="Price100" disabled    class="form-control">
            
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-controller="Index" class="btn btn-secondary form-control">
                    Back to List
                </a>

            </div>
        </div>

    </div>
</form>


